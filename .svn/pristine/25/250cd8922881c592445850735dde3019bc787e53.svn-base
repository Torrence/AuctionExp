	@Override
	public Auction getNextRoundAuction(){
		List<Auction> auctionList = auctionDAO.findByHQL("from Auction where status = 0 order by round ASC", 0, 1);
		return auctionList != null && auctionList.size()>0 ? auctionList.get(0) : null;
	}

